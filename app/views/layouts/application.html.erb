<!DOCTYPE html>
<html>
<head>
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>Control</title>
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	<%= csrf_meta_tags %>
</head>
<body>
	<div id="wrapper-sidebar">

		<!-- Sidebar -->
		<div id="sidebar-wrapper">
			<ul class="sidebar-nav">
				<li class="sidebar-brand">
					Boilerplate
				</li>
				<div class="sidebar-menu">
					<li><a href="#">Dashboard</a></li>
					<li><a href="#">Shortcuts</a></li>
					<li><a href="#">Overview</a></li>
					<li><a href="#">Events</a></li>
					<li><a href="#">About</a></li>
					<li><a href="#">Services</a></li>
					<li><a href="#">Contact</a></li>
				</div>
			</ul>
		</div>

		<!-- Page Content -->
		<div id="page-content-wrapper">
			<header>
				
				<nav class="navbar navbar-default navbar-fixed-top">
					<div class="container-fluild">
						<!-- Brand and toggle get grouped for better mobile display -->
						<div class="navbar-header">
							<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
								<span class="sr-only">Toggle navigation</span>
								<span class="icon-bar"></span>
								<span class="icon-bar"></span>
								<span class="icon-bar"></span>
							</button>
							<%= link_to root_path, :class => "navbar-brand" do %>Boilerplate<% end %>
						</div>

						<!-- Collect the nav links, forms, and other content for toggling -->
						<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
							<ul class="nav navbar-nav">
								<li><a id="menu-toggle" href="">Toggle</a></li>
							</ul>

							<ul class="nav navbar-nav navbar-right">
								<li class="dropdown">
									<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"><%= current_user.email %> <span class="caret"></span></a>
									<ul class="dropdown-menu">
										<li><a href="#"><i class="fa fa-user"></i> Mi cuenta</a></li>
										<li><a href="#"><i class="fa fa-question-circle"></i> Ayuda </a></li>
										<li role="separator" class="divider"></li>
										<li><%= link_to destroy_user_session_path, :method => :delete do %> <i class="fa fa-sign-out"></i> Sign out<% end %></li>
									</ul>
								</li>
							</ul>
						</div><!-- /.navbar-collapse -->
					</div><!-- /.container-fluid -->
				</nav>

			</header>
			<section id="body">
				<div class="breadcrumb">
					<%= render_breadcrumbs :tag => :li, :separator => "" %>
				</div>
				<%= yield %>
			</section>
			<footer>
				<div class="container-fluid">
				<div class="row">
					<div class="col-sm-6">This is a text</div>
					<div class="col-sm-6 text-right">0.0.1</div>
				</div>
				</div>
			</footer>
		</div>

		
	</div>

	<script>
		$("#menu-toggle").click(function(e) {
      e.preventDefault();
      $("#wrapper-sidebar").toggleClass("toggled");
    });
	</script>
</body>
</html>
