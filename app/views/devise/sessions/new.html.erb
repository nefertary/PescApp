<div class="container">
  
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
      
      <div class="panel panel-default">
        <div class="panel-heading">
          <div class="panel-title">Ingresar</div>
        </div>
        <div class="panel-body">
          
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group">
              <%= f.label :email %>
              <%= f.email_field :email, autofocus: true, :placeholder => "name@example.com", :class => "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :password %><br />
              <%= f.password_field :password, autofocus: true, :placeholder => "********", :class => "form-control" %>
            </div>

            <% if devise_mapping.rememberable? -%>
              <div class="field float-left">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end -%>
          
            <div class="actions">
              <%= f.submit "Ingresar", :class => "btn btn-primary float-right" %>
            </div>
          <% end %>

        </div>
      </div>

      <div class="panel panel-default">
        <div class="panel-body">
          
          <ul>
            <li><%= link_to "Registro", new_registration_path(resource_name) %></li>
            <li><%= link_to "¿Olvidó su contraseña?", new_password_path(resource_name) %></li>  
          </ul>  

        </div>
      </div>

    </div>
  </div>

</div>
